@**Use an if statement to print "TGIF" on the page if it's Friday*@

@{ 
    var FridayMSG = "TGIF";
    var NotFridayMSG = " NO TIGF";
}
@if (@DateTime.Now.DayOfWeek.ToString() == "Friday" )
{
    <h2>  @FridayMSG </h2>
}

else
{
    <h3> @NotFridayMSG</h3>
}




